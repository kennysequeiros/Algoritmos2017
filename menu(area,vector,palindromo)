#include "stdafx.h"
#include <iostream>
#include "conio.h"
#include "math.h"
#include <string>
#include "stdlib.h"
 
 #define MAX 100
 
 using namespace std;
 
 float AreaTriangulo(float a,float b, float c);
 void leerVector(int B[],int N);
 void Generar(int V[],int Vex[],int N,int M);
 void palindromo(string var2);
 
 void main()
 {int opc;
  float a,b,c,Ar;
  int V[MAX],Vex[MAX],N,M;
  string palabra;
  do
  { cout<<"\n Menu";
    cout<<"\n 1 --> Funcion";
    cout<<"\n 2 --> Vector";
    cout<<"\n 3 --> String";
    cout<<"\n 0 --> Salir";
    cout<<"\n Ingrese una opcion: ";
    cin>>opc;
 
    system("cls");
 
    switch(opc)
    {case 1: cout<<"\n Ingrese lado a: ";
             cin>>a;
 		    cout<<"\n Ingrese lado b: ";
             cin>>b;
 			cout<<"\n Ingrese lado c: ";
             cin>>c;
             Ar = AreaTriangulo(a,b,c);
 			cout<<"\n El Area del Triangulo es: "<<Ar;
 			break;
 
    case 2: cout<<"\n Ingrese el tamaño del 1er vector: ";
 	       cin>>N;
 		   cout<<"\n Ingrese el tamaño del 2do vector: ";
 	       cin>>M;
 
 		   cout<<"\n Ingrese Los Valores del 1er vector: \n\n";
 		   leerVector(V,N);
 		   cout<<"\n";
 		   cout<<"\n Ingrese Los Valores del 2do vector: \n\n";
 	       leerVector(Vex,M);
		   cout<<"\n";
 		   Generar(V,Vex,N,M);
 		   
 		   break;
 
    case 3: 
             getline(cin,palabra);
             palindromo(palabra);
 
             break;
 
    case 0:
 	       cout<<"\n --- Salir ---";
 	       break;
 
    default: 
 	     cout<<"\n --- Opcion invalida ---";
    }
   
  }while(opc<0 || opc>3);
 
 
  
 
  getch();
 }
 
 float AreaTriangulo(float a,float b, float c)
 {float p,Area;
  
  p = (a+b+c)/(2);
  Area = sqrt(p*(p-a)*(p-b)*(p-c));
 
  return Area;
 }
 
 void leerVector(int B[],int N)
{for(int i=0;i<N;i++)
    {cout<<"V["<<i<<"]=";
      cin>>B[i];
     }
 }
 
 void Generar(int V[],int Vex[],int N,int M)
 {int i,j=0,Vector[MAX]={'0'};
  int aux=0;
     for(i=0;i<N;i++)
        { Vector[i] = V[i];
 	     j++;
        }
 	for(i=0;i<M;i++)
        { Vector[j] = Vex[i];
 	     j++;
        }
 	cout<<"\n Mostrando nuevo vector \n";
 	for(int i=0;i<(N+M);i++)
     { cout<<"\n"<<"Vector["<<i<<"]="<<Vector[i];
     }
 
 	cout<<"\n";
 
 	for(i=0;i<(N+M)-1;i++)
        {for(j=i+1;j<(N+M);j++)
            {if(Vector[i]<Vector[j])
               {aux = Vector[i];
                Vector[i] = Vector[j];
                Vector[j] = aux;
               }
            }
        }
 	cout<<"\n Datos Clasificados al nuevo vector: \n";
 	for(int i=0;i<(N+M);i++)
        {cout<<"\n Vector["<<i<<"] = "<<Vector[i];
        }
 }
 
 void palindromo(string var2)
 {  int longitud,aux;
    string palabra;
    
     cout<<"Ingrese una palabra: ";
     getline(cin,palabra);
     var2=palabra;
     longitud=palabra.length();
     for(int i=0;i<longitud/2;i++)
        {aux=palabra[i];
         palabra[i]=palabra[longitud-1-i];
        palabra[longitud-1-i]=aux;
        }
 
         cout<<"El nombre invertido es: "<<palabra<<endl;
     if(var2.compare(palabra)==0)
        cout<<"Es un palindromo";
     else
       cout<<"No es un palindromo";
}
