#include "stdafx.h"
#include <iostream>
#include "conio.h"

using namespace std;
bool VerificarNroPrimo (int N);

void main()
{
	int Nro;
	do{
		cout << "Ingresa un numero natural para verificar si es primo o no: "<<endl;
		cin >> Nro;
	}while(Nro<=0);
	
	if (VerificarNroPrimo (Nro)==true)
	{
		cout<<"\t\t\t"<< Nro <<" Es primo!"<<endl;
	}
	else 
	{
		cout <<"\t\t\t"<< Nro << " No es primo :'( "<<endl;
	}

	_getch();
}

bool VerificarNroPrimo (int N)
{
	int i;
	bool k = true;
	for (i=2;i<=(N-1);i++)
	{
		if(N % i == 0)
		{
			k = false;
			i=N;
		}
	}
	
	return (k);
}
